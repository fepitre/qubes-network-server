Name:           qubes-core-admin-network-server
Version:        @VERSION@
Release:        @REL@%{?dist}
Summary:        dom0 administrative extension for Qubes network server
BuildArch:      noarch

License:        GPLv2+
URL:            https://github.com/QubesOS-contrib/qubes-network-server
Source0:        %{name}-%{version}.tar.gz

BuildRequires:  make
BuildRequires:  coreutils
BuildRequires:  tar
BuildRequires:  findutils
BuildRequires:  python3-setuptools
BuildRequires:  python3-rpm-macros
BuildRequires:  systemd-rpm-macros

Requires:       qubes-core-dom0 >= 4.1
Requires:       python3-qubesdb

%description
This package lets you turn your Qubes OS into a network server.

Please see README.md enclosed in the package for instructions on how to use
this software.

%prep
%setup -q

%install
rm -rf $RPM_BUILD_ROOT
# variables must be kept in sync with build
make install-dom0 DESTDIR=$RPM_BUILD_ROOT SBINDIR=%{_sbindir} UNITDIR=%{_unitdir} PYTHON=%{__python3}

%files
%doc README.md TODO
%attr(0644, root, root) %{python3_sitelib}/qubesnetworkserver
%{python3_sitelib}/qubesnetworkserver-*.egg-info

%post
%systemd_post qubesd.service

%postun
%systemd_postun_with_restart qubesd.service

%changelog
@CHANGELOG@
